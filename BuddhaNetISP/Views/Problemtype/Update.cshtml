@model BuddhaNetISP.Models.Problemtype
<!DOCTYPE html>
<html lang="en">
@{
    ViewData["Title"] = "Create";
}

<head>
    <title>Update Problem Type</title>
</head>

<body>
    <div class="Category"></div>
    <!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <a href="/ProblemType/List" class="btn btn-w-m btn-outline-primary m-l m-b-xs">
                            <i class="fa fa-plus"></i> Back to list
                        </a>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                        <h1 class="card-title font-bold">Update Problem Type</h1>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("Update", "ProblemType", FormMethod.Post, new { @class = "row g-3" }))
                        {
                            <div class="col-md-4">
                                <label for="Typename" class="form-label">Type Name</label>
                                @Html.TextBoxFor(e => e.typename, new { type = "text", placeholder = "Type Name", @class = "form-control", required = "required" })
                                <div class="invalid-feedback">
                                    @Html.ValidationMessageFor(e => e.typename, null, new { @class = "text-danger" })
                                </div>
                            </div>

                            @* <div class="col-md-4">
                                <label for="ParentProblemTypeId" class="form-label">Parent Type ID</label>
                                @Html.TextBoxFor(e => e.parentproblemtypeid, new { type = "number", placeholder = "Parent Type ID", @class = "form-control" })
                                <div class="invalid-feedback">
                                    @Html.ValidationMessageFor(e => e.parentproblemtypeid, null, new { @class = "text-danger" })
                                </div>
                            </div> *@


                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Update</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>
</body>

</html>
