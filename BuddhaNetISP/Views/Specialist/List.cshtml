@model IEnumerable<BuddhaNetISP.Models.Specialist>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Specialist List</h5>
                    <a href="/Specialist/Create" class="btn btn-w-m btn-outline-primary m-l m-b-xs">
                        <i class="fa fa-plus"></i> Add New
                    </a>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Specialist Name</th>
                                    <th>Expertise Area</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var specialist in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                                <input type="hidden" class="id" value="@specialist.specialistid" />
                                            </td>
                                            <td class="center">@specialist.specialistname</td>
                                            <td class="center">@specialist.expertisearea</td>
                                            <td class="center">
                                                <a href="/Specialist/Update?id=@specialist.specialistid" class="btn btn-outline-primary">Edit</a>
                                                <a href="/Specialist/Delete?specialistid=@specialist.specialistid" class="btn btn-outline-primary">Delete</a>
                                            </td>
                                        </tr>
                                        sn++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
